<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC
  "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<servlet>
		  <servlet-name>KettleDemo</servlet-name>
		  <servlet-class>org.fluidproject.kettle.KettleServlet</servlet-class>
      <init-param>
          <param-name>kettleConfigLocation</param-name>
          <param-value>/kettleDemo/kettleCherryDemo.json</param-value>
      </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		  <servlet-name>ArtifactServlet</servlet-name>
		  <servlet-class>org.fluidproject.kettle.KettleServlet</servlet-class>
      <init-param>
          <param-name>kettleConfigLocation</param-name>
          <param-value>/artifactDemo/ArtifactDemo.json</param-value>
      </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		  <servlet-name>CouchServlet</servlet-name>
		  <servlet-class>org.fluidproject.kettle.KettleServlet</servlet-class>
      <init-param>
          <param-name>kettleConfigLocation</param-name>
          <param-value>/artifactDemo/CouchDemo.json</param-value>
      </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		  <servlet-name>BrowseServlet</servlet-name>
		  <servlet-class>org.fluidproject.kettle.KettleServlet</servlet-class>
      <init-param>
          <param-name>kettleConfigLocation</param-name>
          <param-value>/browseDemo/BrowseDemo.json</param-value>
      </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
    	<servlet>
		  <servlet-name>BrowseCouchServlet</servlet-name>
		  <servlet-class>org.fluidproject.kettle.KettleServlet</servlet-class>
      <init-param>
          <param-name>kettleConfigLocation</param-name>
          <param-value>/browseDemo/BrowseCouchDemo.json</param-value>
      </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
	    <servlet-name>KettleDemo</servlet-name>
	    <url-pattern>/kettleDemo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>ArtifactServlet</servlet-name>
	    <url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>BrowseServlet</servlet-name>
	    <url-pattern>/browse</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>CouchServlet</servlet-name>
	    <url-pattern>/couch</url-pattern>
	</servlet-mapping>
    	<servlet-mapping>
	    <servlet-name>BrowseCouchServlet</servlet-name>
	    <url-pattern>/browsecouch</url-pattern>
	</servlet-mapping>

</web-app>
